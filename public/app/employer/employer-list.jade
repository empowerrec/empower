.container.top-padding-med
    .pull-right
        form.form-inline
            .form-group
                input.form-control(ng-model="searchText", placeholder="Filter")
            .form-group.margin-left-med
                select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th {{"Employer.EmployerName" | translate}}
                th {{"Employer.AverageNumberOfJobOpeningsPerMonth" | translate}}
                th {{"Employer.NumberOfEmployees" | translate}}
                th {{"Employer.EmployerType" | translate}}
                th
        tbody
            tr(ng-repeat="employer in employers | filter:searchText | orderBy:sortOrder")
                td
                    a(href="#/employers/{{employer._id}}")  {{ employer.EmployerName }}
                td {{ employer.AverageNumberOfJobOpeningsPerMonth}}
                td {{ employer.NumberOfEmployees}}
                td {{ employer.EmployerType}}
                td
                    a(href="#/updateemployer/{{employer._id}}")  {{"Buttons.Update" | translate}}